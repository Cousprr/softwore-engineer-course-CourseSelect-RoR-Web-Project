<div class="container-fluid">
  <div class="row">
    <div class="col-sm-2">
      <%= render "shared/sidenav" %>

    </div>
    <div class="col-sm-10">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">选修课程</h3>
        </div>
        <br>
        
        <div style="width: 80%; margin: 0 auto; text-align: center;">
          <form action="/courses/search" method="get">
          <div class="form-check">
            <input class="form-check-input" type="checkbox" name="check_time" value="1">
            <label class="form-label">上课时间</label>
            <select class="form-select" aria-label="Default select example" name="my_time_day" style="width: 100px;">
              <option value="周一">周一</option>
              <option value="周二">周二</option>
              <option value="周三">周三</option>
              <option value="周四">周四</option>
              <option value="周五">周五</option>
              <option value="周六">周六</option>
              <option value="周日">周日</option>
            </select>
            <select class="form-select" aria-label="Default select example" name="my_time_hour" style="width: 100px;">
              <option value="(1-2)">（1-2）</option>
              <option value="(3-4)">（3-4）</option>
              <option value="(5-6)">（5-6）</option>
              <option value="(7-8)">（7-8）</option>
              <option value="(9-10)">（9-10）</option>
              <option value="(9-11)">（9-11）</option>
            </select>
            &nbsp;
            <input class="form-check-input" type="checkbox" name="check_choice" value="1">
            <label class="form-label">课程属性</label>
            <select class="form-select" aria-label="Default select example" name="my_classchoice">
              <option value="公共选修课">公共选修课</option>
              <option value="一级学科普及课">一级学科普及课</option>
              <option value="一级学科核心课">一级学科核心课</option>
              <option value="专业普及课">专业普及课</option>
              <option value="专业核心课">专业核心课</option>
              <option value="专业研讨课">专业研讨课</option>
            </select>
            &nbsp;
            <input class="form-check-input" type="checkbox" name="check_name" value="1">
            <label class="form-label">课程名称</label>
            <select class="form-select" aria-label="Default select example" name="my_classname">
              <% @courses_all.each do |course| %>
                <option value= "<%= course.name %>" ><%= course.name %></option>
              <% end %>
            </select>
            &nbsp;
            <button type="submit" class="btn btn-success btn-sm">查询</button>
          </div>
          
          </form>
        </div>

        <div class="panel-body" style="min-height: 450px">
          <table class="table table-striped table-hover">
            <thead>

            <tr>
              <th>课程编号</th>
              <th>课程名称</th>
              <th>课时/学分</th>
              <th>限选</th>
              <th>已选</th>
              <th>课程属性</th>
              <th>授课方式</th>
              <th>考试方式</th>
              <th>主讲教师</th>

            </tr>
            </thead>
            <tbody>

            <% @courses.each do |course| %>
                <tr>

                  <td><%= course.course_code %></td>
                  <td><%= course.name %></td>
                  <td><%= course.credit %></td>
                  <td><%= course.limit_num %></td>
                  <td><%= course.student_num %></td>
                  <td><%= course.course_type %></td>
                  <td><%= course.teaching_type %></td>
                  <td><%= course.exam_type %></td>
                  <td><%= course.teacher.name %></td>
                  <td><%= link_to "加入课程", select_course_path(course), class: 'btn-sm btn-info' %></td>

                </tr>
            <% end %>
            </tbody>
          </table>
          <%= will_paginate @courses %>
        </div>
      </div>
    </div>
  </div>
</div>


